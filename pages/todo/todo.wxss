/* pages/todo/todo.wxss */
@import "../common/search/search.wxss";
@import "../common/common.wxss";
@import "../common/item.wxss";
@import "../common/iconfont/iconfont.wxss";

.topTabBar{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}
.tabbarBox{
  width: 48%;
  background-color: #eee;
  border-radius: 6rpx;
  padding: 8rpx 0;
}

/*my-modal*/
.modalBox{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 1000;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}
.modalBoxContent{
  background-color:#fff;
  width:60%;
  border-radius:25rpx;
  font-size:26rpx;
  padding-top:20rpx;
}
.ratioGroupBox{
  max-height: 400rpx;
  overflow: auto;
}
.ratioBox{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding:16rpx;
  
}
.hadleBtnBox{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.handleBtn{
  width: 50%;
  text-align: center;
  padding:20rpx;
}
.cancelBtn{
  border-top: 2rpx #ccc solid;
}
.confirmBtn{
  border-top: 2rpx #ccc solid;
  border-left: 2rpx #ccc solid;
}