<view class="section itemDetailContent">
  <view class="itemDetailBox">
    <view class="oneItemDetail">
      <view class="itemLabel">工作日期</view>
      <view class="itemDetailValue">{{workdate}}</view>
    </view>
    <view class="oneItemDetail">
      <view class="itemLabel">工时（天）</view>
      <view class="itemDetailValue">{{worktime}}</view>
    </view>
    <view class="oneItemDetail">
      <view class="itemLabel">分类</view>
      <view class="itemDetailValue">{{kind}}</view>
    </view>
    <view class="oneItemDetail">
      <view class="itemLabel">工作计划</view>
      <view class="itemDetailValue">{{workplan}}</view>
    </view>
    <view class="oneItemDetail">
      <view class="itemLabel">项目</view>
      <view class="itemDetailValue">{{project}}</view>
    </view>
    <view class="oneItemDetail">
      <view class="itemLabel">项目任务</view>
      <view class="itemDetailValue">{{duty}}</view>
    </view>
    <view class="oneItemDetail">
      <view class="itemLabel">状态</view>
      <view class="itemDetailValue">{{status}}</view>
    </view>
  </view>
</view>
<view class="textareaLabel">主题</view>
<view class="section textareaBox">
  <textarea value="{{topic}}" auto-height />
</view>
<view class="textareaLabel">内容</view>
<view class="section textareaBox">
  <textarea value="{{content}}" auto-height />
</view>
<view class="textareaLabel">备注</view>
<view class="section textareaBox">
  <textarea value="{{bz}}" auto-height />
</view>
<view class="section itemDetailContent">
  <view class="itemDetailBox">
    <view class="oneItemDetail">
      <view class="itemLabel">维护人</view>
      <view class="itemDetailValue">{{maintain}}</view>
    </view>
    <view class="oneItemDetail">
      <view class="itemLabel">维护时间</view>
      <view class="itemDetailValue">{{maintainTime}}</view>
    </view>
  </view>
</view>
<view class="btnBox">
  <button type="primary">修改</button>
</view>
<view class="btnBox">
  <button type="warn">删除</button>
</view>