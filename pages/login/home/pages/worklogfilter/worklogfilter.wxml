<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="titlebox">工作流事务</view>
  <view class="section"> 
    <radio-group bindchange="radioChange">
      <label class="weui-cell weui-check__label" wx:for="{{items}}" wx:key="{{item.value}}">
        <view class="weui-cell__hd">
          <radio value="{{item.value}}" checked="true"/>
        </view>
        <view class="weui-cell__bd">{{item.name}}</view>
      </label>
    </radio-group>
  </view>
  <view class="titlebox">工作时间</view>
  <view class="section">
    <view class="oneItemDetail">
      <view class="itemLabel">开始日期</view>
      <picker mode="date" value="{{startdate}}" bindchange="startDateChange">
        <view class="itemDetailValue">{{startdate}}</view>
      </picker>
    </view>
    <view class="oneItemDetail">
      <view class="itemLabel">结束日期</view>
      <picker mode="date" value="{{enddate}}" bindchange="endDateChange">
        <view class="itemDetailValue">{{enddate}}</view>
      </picker>
    </view>
  </view>
  <view class="btnBox">
    <button type="primary">提交</button>
  </view>
  <view class="btnBox">
    <button type="primary" form-type="reset">重置</button>
  </view>
</form>

