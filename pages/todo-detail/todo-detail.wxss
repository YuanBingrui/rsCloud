/* pages/todo-detail/todo-detail.wxss */
@import "../common/common.wxss";
@import "../common/iconfont/iconfont.wxss";

.avatarImg{
  width: 80rpx;
  height: 80rpx;
}
.itemDetailHeader{
  padding: 0 0 0 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.itemDetailHeaderIcon{
  display: flex;
  justify-content: center;
}
.itemDetailHeaderIcon image{
  width: 80rpx;
  height: 80rpx;
}
.itemDetailHeaderWord{
  margin-left: 20rpx;
}
.itemDetailHeaderWordDate{
  font-size: 30rpx;
  color: #999;
  margin-top: 4rpx;
}
.itemMxHeader{
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px #D8D8D8 solid;
  padding: 10rpx 0;
}
.itemlogContent{
  min-height:120rpx;
  padding:10rpx 20rpx;
}
.mxDetailContent{
  margin: 15rpx 12rpx;
  box-shadow: 0px 0px 1px 0.5px #888888;
}
.handleBtn{
  margin: 30rpx 0 0 0;
}
.handleBtn{
  margin: 0 0 50rpx 0;
}
.handleBtn button{
  color: #fff;
  width: 90%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  background-color: #0074d9;
}
.cardBox{
  width: 95%;
  margin:0 auto 20rpx auto;
  box-shadow: 0 0 2rpx 2rpx #ccc;
  border-radius:20rpx;
}
.cardFood{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
}
.oneTextareaDetail {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
}
.textareaLabel{
  padding: 10rpx;
  border-bottom: 2rpx #ccc solid;
}
.textareaBox{
  padding: 10rpx;
}

.tableBox {
  border-bottom: 1px rgba(0,0,0,0.3) solid;
  margin-bottom: 15rpx;
}
.tableHeader{
  width: 95%;
  margin: 4rpx auto;
  border-bottom: 1px rgba(56,171,255,0.5) solid;
  padding: 5px 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tableHeaderLeft{
  font-weight: bold;
  font-size: initial;
}
.tableHeaderRight{
  color: #999999;
}
.tableBody .tr:nth-child(even){
  background: rgba(56,171,255,0.5);
}
.tableBody .tr:nth-child(odd){
  background: #FFF;
}
.tr{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.th{
  font-weight: bold;
  text-align: center;
  padding: 8rpx 0;
  font-family: Verdana;
  border: 4rpx #fff solid;
  border-radius: 15rpx;
}
.td{
  text-align: center;
  padding: 8rpx 0;
  font-family: Verdana;
  border: 4rpx #fff solid;
  border-radius: 15rpx;
}
.defaultBox{
  margin-top: 14rpx;
}
